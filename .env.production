# Production Environment Variables for Railway Deployment
# These will be set in Railway dashboard

# Database (Railway PostgreSQL - auto-configured)
DATABASE_URL=${{RAILWAY_DATABASE_URL}}
REDIS_URL=${{RAILWAY_REDIS_URL}}

# Authentication & Security
JWT_SECRET=${{JWT_SECRET}}
NODE_ENV=production
PORT=${{PORT}}

# External APIs (Configure in Railway dashboard)
OPENAI_API_KEY=${{OPENAI_API_KEY}}
GOOGLE_APPLICATION_CREDENTIALS=${{GOOGLE_APPLICATION_CREDENTIALS}}
SUPABASE_URL=${{SUPABASE_URL}}
SUPABASE_ANON_KEY=${{SUPABASE_ANON_KEY}}
SUPABASE_SERVICE_ROLE_KEY=${{SUPABASE_SERVICE_ROLE_KEY}}

# Stripe (Optional for MVP)
STRIPE_SECRET_KEY=${{STRIPE_SECRET_KEY}}
STRIPE_PUBLISHABLE_KEY=${{STRIPE_PUBLISHABLE_KEY}}

# Application URLs (Railway auto-generates)
FRONTEND_URL=${{RAILWAY_FRONTEND_URL}}
BACKEND_URL=${{RAILWAY_BACKEND_URL}}
AI_PIPELINE_URL=${{RAILWAY_AI_PIPELINE_URL}}

# Email (Optional for MVP)
SENDGRID_API_KEY=${{SENDGRID_API_KEY}}
FROM_EMAIL=noreply@personalbranddna.com

# Production Settings
CORS_ORIGIN=${{RAILWAY_FRONTEND_URL}}
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PAYMENT_PROCESSING=false
RATE_LIMIT_MAX_REQUESTS=100