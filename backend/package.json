{
  "name": "pbdna-backend",
  "version": "1.0.0",
  "description": "Personal Brand DNA System Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:watch": "jest --config jest.e2e.config.js --watch",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:integration:watch": "jest --config jest.integration.config.js --watch --runInBand",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage --runInBand",
    "test:unit": "jest --testPathIgnorePatterns='(e2e|integration)'",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "migrate": "node src/scripts/migrate.js",
    "migrate:test": "NODE_ENV=test node src/scripts/migrate.js",
    "seed": "node src/scripts/seed.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test:perf": "artillery run __tests__/performance/baseline.yml",
    "test:perf:stress": "artillery run __tests__/performance/stress-test.yml",
    "test:perf:spike": "artillery run __tests__/performance/spike-test.yml",
    "test:perf:soak": "artillery run __tests__/performance/soak-test.yml",
    "test:perf:all": "npm run test:perf && npm run test:perf:stress && npm run test:perf:spike && npm run test:perf:soak",
    "test:perf:report": "node __tests__/performance/generate-report.js",
    "test:perf:quick": "node __tests__/performance/quick-check.js",
    "db:analyze": "node src/scripts/analyze-queries.js",
    "db:monitor": "node src/scripts/db-monitor.js",
    "db:monitor:dashboard": "node src/scripts/db-monitor.js --dashboard",
    "db:migrate:perf": "npm run migrate && psql $DATABASE_URL -f migrations/007_performance_indexes.sql -f migrations/008_workshop_indexes.sql -f migrations/009_news_calendar_indexes.sql -f migrations/010_linkedin_indexes.sql",
    "test:security": "jest __tests__/security --runInBand",
    "test:security:coverage": "jest __tests__/security --coverage --runInBand",
    "security:scan": "node src/scripts/security-scan.js",
    "security:audit": "npm audit --production",
    "security:check": "npm run security:scan && npm run security:audit",
    "security:report": "node src/scripts/generate-security-report.js",
    "injection:scan": "node src/scripts/injection-scanner.js",
    "injection:scan:src": "node src/scripts/injection-scanner.js src"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.0.1",
    "aws-sdk": "^2.1438.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "glob": "^10.3.10",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.9.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nodemailer": "^6.9.4",
    "openai": "^4.6.0",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.7",
    "sqlstring": "^2.3.3",
    "stripe": "^13.5.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "artillery": "^2.0.23",
    "artillery-plugin-expect": "^2.17.0",
    "artillery-plugin-metrics-by-endpoint": "^1.17.0",
    "eslint": "^8.47.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "personal-branding",
    "ai",
    "content-generation",
    "linkedin"
  ],
  "author": "Personal Brand DNA Team",
  "license": "MIT"
}
